---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import Laptop from '/main.jpg'
import ApoteoThumb from '/ApoteoThumb.jpeg'
import Github from '/github.svg'
import LinkedIn from '/linkedin.svg'
import Email from '/email.svg'
import Html from '/html.svg'
import React from '/react.svg'
import Js from '/js.svg'
import Dotnet from '/dotnet.svg'
import Csharp from '/csharp.svg'
import Firebase from '/firebase.svg'
import SectionHeader from "../components/SectionHeader.astro";
---


<Layout title="Home">
	<main class="flex bg-offwhite items-center justify-center h-screen p-5 sm:p-16">
		<div class="w-[50%] text-left">
			<h1 class="text-6xl font-title">Hi!<br>I'm <span class="text-primary">Karl</span>,<br>Web Developer</h1>
			<div class="p-2"></div>
			<h2 class="text-2xl text-secondary">Web developer + Rock climber</h2>
			<div class="p-2"></div>
			<div class="flex items-center">
				<button class="bg-primary text-xl text-white rounded-[100px] px-5 py-2">Resume</button>
				<div class="p-5"></div>
				<div class="display flex">
					<img class="w-[25px] fill-primary" src={LinkedIn} alt="">
					<div class="p-5"></div>
					<img class="w-[25px] fill-primary" src={Github} alt="">
					<div class="p-5"></div>
					<img class="w-[25px] fill-primary" src={Email} alt="">
				</div>
			</div>
		</div>
	</main>
	<section class="bg-offwhite md:px-40 md:py-16 ml-[110px]">
		<p class="text-2xl">Click on projects to see more!</p>
		<div class="p-2"></div>
