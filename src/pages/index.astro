---
import Layout from "../layouts/Layout.astro";
import Section from "../layouts/Section.astro";
import Project from "../components/Project.astro";
import SectionHeader from "../components/SectionHeader.astro";
import Links from "../components/Links.astro";
---


<Layout title="Home">
	<Section id={"about"}>
		<SectionHeader title="Who am I?"/>
		<div class="p-2"></div>
		<h1 class="font-title text-2xl sm:hidden font-bold mb-1"> <span class="text-highlight">Karl</span> Gildenhuys</h1>
		<p class="max-w-[600px] font-light text-xl">Just another software developer who likes to build cool stuff. When I'm not working and coding hobby projects, you can find me at the beach surfing or climbing walls. Check out some of my projects below and feel free to get in touch!</p>
	</Section>	

	<p class="p-7"></p>
	
	<Section id={"work"}>
		<SectionHeader title="My work"/>
		<div class="p-2"></div>
		<div class="flex flex-col sm:flex-row justify-between">
			<Project 
				link="https://leolang.netlify.app"
				title="Leolang"
				tagline="Learn to read te reo Māori with ease"
				tech="React, Typescript, HTML, CSS"
				img={'/leolang.png'}
			/>
			<p class="p-5"></p>
			<Project 
				link="https://www.gilcopm.co.nz"
				title="Gilcopm Website"
				tagline="The business website for Gilcopm"
				tech="Wordpress, PHP, JavaScript"
				img={'/kurzurl.png'}
			/>
		</div>
	</Section>

	<p class="p-7"></p>

	<div id="contact" class="bg-offwhite flex flex-col sm:flex-row">
		<div class="sm:w-[50%] flex flex-col justify-evenly">
			<h1 class="text-5xl text-highlight">Lets connect!</h1>
			<div class="p-2 sm:p-5"></div>
			<p class="w-[75%]">If you want to grab a coffee for a quick chat. You can find me on social media or contact me here.</p>
			<div class="p-2 sm:p-5"></div>
			<Links/>
		</div>
		<div class="p-2"></div>
		<div class="sm:w-[50%]">
			<form class="flex flex-col" action="">
				<small>Name:</small>
				<input class="p-1 bg-secondary border-2 border-[#333] rounded-sm" type="text">
				<div class="p-1"></div>
				<small>Email:</small>
				<input class="p-1 bg-secondary border-2 border-[#333] rounded-sm" type="text">
				<div class="p-1"></div>
				<small>Message:</small>
				<textarea class="p-1 bg-secondary h-[100px] border-2 border-[#333] rounded-sm resize-none"/>
				<div class="p-1"></div>
				<button class="w-full bg-highlight text-white px-6 py-2 rounded-sm">Submit</button>
			</form>

		</div>
	</div>
</Layout>

